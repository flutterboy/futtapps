<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.negro.contabilitapp.fragments.DettaglioMovimentoFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/movimentoView">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                    android:text="Dettaglio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dettaglioLabel"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:id="@+id/dataLabel"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/dettaglioLabel"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dataMovimento"
                    android:layout_below="@+id/dataLabel"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direzione"
                    android:id="@+id/direzioneLabel"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/dataMovimento"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/direzioneMovimento"
                    android:layout_below="@+id/direzioneLabel"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target"
                    android:id="@+id/targetLabel"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/direzioneMovimento"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/targetMovimento"
                    android:layout_below="@+id/targetLabel"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importo"
                    android:id="@+id/importoLabel"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/targetMovimento"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/importoMovimento"
                    android:layout_below="@+id/importoLabel"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrizione"
                    android:id="@+id/descrizioneLabel"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/importoMovimento"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/descrizioneMovimento"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/descrizioneLabel"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documento"
                    android:id="@+id/documentoLabel"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/descrizioneMovimento"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/documentoImageView"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/documentoLabel"/>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>